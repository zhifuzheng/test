.tabs-dnd-panels { position: relative; }
.tabs-dnd-shade { position: absolute; left: 0; top: 0; z-index: 1000000; width: 100%; height: 100%; filter: alpha(opacity=0); opacity: 0; }
.tabs li.tabs-dnd-left { border-left: 2px solid red; }
.tabs li.tabs-dnd-right { border-right: 2px solid red; }
.tabs li.tabs-dnd-top { border-top: 2px solid red; }
.tabs li.tabs-dnd-bottom { border-bottom: 2px solid red; }