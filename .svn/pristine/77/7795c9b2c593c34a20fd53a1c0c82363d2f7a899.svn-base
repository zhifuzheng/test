@charset "utf-8";
html,
body {
	background: #fff;
	color: #333;
	font: 14px/1.6 'Microsoft YaHei', Tahoma, Verdana, 'Simsun';
}

a {
	color: #333;
	text-decoration: none;
}

.new001 .item:hover {
	background: linear-gradient(0deg, rgba(228, 64, 37, 1) 0%, rgba(228, 64, 37, 1) 0%, rgba(231, 115, 88, 1) 100%, rgba(231, 115, 88, 1) 100%) !important;
}

ul,
li {
	list-style: none;
}

.headnav {
	position: absolute;
	right: 0;
	left: 0;
	z-index: 1030;
}

.headnav h1 a {
	line-height: 66px;
}

@media (max-width: 768px) {
	.headnav {
		background-color: #2a313d;
	}
	.hamburger {
		position: absolute !important;
	}
	.navbar-static-top {
		position: relative;
	}
}

@media (max-width: 1000px) {
	.col10 {
		width: 83.33333333% !important;
	}
}

/*导航*/

.new001 {
	padding: 0px 0 260px 0;
	background: #f2f4f5;
	overflow: hidden;
	background: url(../img/bj-99.png) no-repeat 0 center;
}
.row{
	margin-top: 120px;
}
.new001 .mb5 {
	margin-bottom: 5px;
}

.new001 .mb10 {
	margin-bottom: 10px;
}

.new001 .ps {
	font-size: 12px;
	color: #999;
	line-height: 20px;
	word-wrap: break-word;
	word-break: break-all;
}

.new001 .fs30 {
	font-size: 30px;
	line-height: 1.7;
}

.new001 .c505e73 {
	color: #505e73;
}

.new001 .btns {
	margin-bottom: 75px;
	background: #fa7676;
	color: #FFFFFF;

}

.new001 .item {
	height: 172px;
	min-height: 120px;
	padding: 20px;
	background: #FFFFFF;
	border-radius: 2px;
	text-align: center;
	margin-bottom: 30px;
	border-radius: 10px;
}
.new001 .item img {
	width: 60px;
		border-radius: 2px;
	margin-top: 20px;
}

@media (max-width:768px) {
	.new001 {
		padding: 0 0;
		background: url(../img/bj2.png) 0 center;	
	}
	.row{
		margin-top: 30px;
	}
	.new001 .fs30 {
		font-size: 24px;
	}
	.new001 .btns {
		margin-bottom: 30px;
	}
}


/**公用部分 */

.container {
	padding-right: 0px;
	padding-left: 0px;
}

@media(max-width:768px) {
	section.container {
		padding-right: 15px;
		padding-left: 15px;
	}
}

.ul {
	list-style: none;
}

* {
	box-sizing: border-box;
	-moz-box-sizing: border-box;
	-webkit-box-sizing: border-box;
}

.v2-ac:after {
	content: " ";
	clear: both;
	display: block;
}

.v2-to {
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

.v2-lc {
	overflow: hidden;
	word-break: break-all;
	text-overflow: ellipsis;
	-webkit-box-orient: vertical;
	display: -webkit-box;
	-webkit-line-clamp: 2;
}

.v2-list {
	list-style: none;
}

.v2-dbox {
	display: -moz-box;
	display: -webkit-box;
	display: box;
}

.v2-bf1 {
	-moz-box-flex: 1;
	-webkit-box-flex: 1;
	box-flex: 1;
}

.v2-bf2 {
	-moz-box-flex: 2;
	-webkit-box-flex: 2;
	box-flex: 2;
}

.v2-bt1d {
	border-bottom: 1px solid #ddd;
}

.v2-w100 {
	width: 100% !important;
}

.v2-mb50 {
	margin-bottom: 50px;
}

.v2-mtb15 {
	margin-bottom: 30px;
}

.v2-mt15 {
	margin-top: 15px;
}

.v2-c {
	cursor: not-allowed;
}
.head{
	height: 80px;
	background: rgba(0,0,0,.6);
}
.head img{
	width: 80px;
	height: 80px;
	float: left;
	margin-right: 10px;
	margin-top: 2px;
	margin-left: 15%;
	margin: 0 auto;
	margin-left: 15px;
}
.head h2{
	color: #FFFFFF !important;
	display: inline-block;
	font-weight: bold;
	font-size: 36px; font-family: '微软雅黑'; padding: 0; margin-top: 8px;
	margin-left: 10px;
	line-height: 50px;
}
.head .biaot{
	padding: 0px 15px;
	background: rgba(86,86,86,.6);
	border-radius: 50px;
	float: right;
	height: 40px;
	margin-right: 15%;
	margin-top: 20px;
}
.head .biaot .yonghumin{
	float: left;
	margin-left: 15px;
	margin-right: 10px;
	cursor:pointer;
}
.head .biaot .off{
	float: right;
	margin-right: 15px;
	cursor:pointer;
}
.head .biaot .off a{
	color: white;
}
.head .biaot .yonghumin a{
	color: white; 
	line-height: 40px;
}
.head .biaot .yonghumin span{
	color: #F45B4B;
}
